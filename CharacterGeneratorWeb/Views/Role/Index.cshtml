@model IEnumerable<BusinessLogicLayer.RoleBLL>

@{
    ViewBag.Title = "Roles";
}

    <style>
        .table-hover tbody tr:hover {
            color: #fff;
            background-color: #cf0404;
        }

        a {
            color: #fff;
        }
    </style>

<h2 style="color:white;">List of Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th hidden>
            @Html.DisplayNameFor(model => model.RoleID)
        </th>
        <th style="color:white;">
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td hidden>
            @Html.DisplayFor(modelItem => item.RoleID)
        </td>
        <td style="color:white;">
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.RoleID }) |
            @Html.ActionLink("Details", "Details", new {  id=item.RoleID }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.RoleID }) |
            @Html.ActionLink("Add User and Character", "Create", new { id = item.RoleID, Controller="Multi"})
        </td>
    </tr>
}

</table>
