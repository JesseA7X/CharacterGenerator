<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cerberus Creations</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #navthing a {
            color: black;
            margin-bottom: 4px;
        }

        .welcome {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50px;
        }
    </style>
</head>
<body style=" background-color:black;">
    <div class="navbar navbar-inverse navbar-fixed-top" style=" background-color :red;">
        <div class="container">
            <div id="navthing" style="color:black !important;" class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-left"><img src="~/Content/Images/CereCreate.png" width="100" height="50"</a>

                @Html.ActionLink("Cerberus Creations", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navthing" style="color:black !important;" class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li> @Html.ActionLink("Roles", "Index", "Role") </li>
                        <li> @Html.ActionLink("Users", "Index", "User") </li>
                        <li> @Html.ActionLink("All Characters", "Page", "Character") </li>
                        <li> @Html.ActionLink("Characters", "MyIndex", "MyCharacter") </li>
                        <li> @Html.ActionLink("Classes", "Index", "Class") </li>
                        <li> @Html.ActionLink("Races", "Index", "Race") </li>
                    }
                    else if (User.IsInRole("VerifiedUser") || User.IsInRole("RegularUser"))
                    {
                        <!-- <li> @Html.ActionLink("Roles", "Index", "Role") </li>
                        <li> @Html.ActionLink("Users", "Index", "User") </li>-->
                        <li> @Html.ActionLink("Characters", "MyIndex", "MyCharacter") </li>
                        <li> @Html.ActionLink("Classes", "Index", "Class") </li>
                        <li> @Html.ActionLink("Races", "Index", "Race") </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Register", "Register", "Home")</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        <li><div class="welcome"><b>  Welcome @HttpContext.Current.User.Identity.Name</b></div></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "Login", "Home")</li>
                    }




                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style=" background-color:black;">
        @RenderBody()
        <hr />
        <footer style="color:white;">
            <p>&copy; @DateTime.Now.Year - Cerberus Creations</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
